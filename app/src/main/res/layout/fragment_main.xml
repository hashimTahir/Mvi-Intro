<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <EditText
        android:id="@+id/hEnterWordEt"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:hint="Enter word"
        android:padding="@dimen/_8dp"
        app:layout_constraintEnd_toStartOf="@id/hMeaningB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hMeaningB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Means"
        app:layout_constraintBottom_toBottomOf="@id/hEnterWordEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/hEnterWordEt" />

    <TextView
        android:id="@+id/hMeaningTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:padding="@dimen/_8dp"
        android:layout_margin="@dimen/_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hMeaningB"/>
</androidx.constraintlayout.widget.ConstraintLayout>